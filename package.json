{
  "name": "pocket-chrome-extension",
  "version": "0.2.0",
  "description": "Pocket Option Quant & Auto-Trading Chrome Extension",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:dev": "tsc && vite build --mode development",
    "build:watch": "vite build --watch",
    "test": "vitest",
    "test:ci": "vitest run --exclude='src/lib/backtest/**'",
    "test:unit": "vitest run --exclude='src/lib/backtest/**'",
    "test:backtest:smoke": "vitest run src/lib/backtest/backtest.test.ts src/lib/backtest/__tests__/statistics.test.ts src/lib/backtest/__tests__/strategy-comparison.test.ts src/lib/backtest/__tests__/indicators.test.ts",
    "test:backtest:full": "vitest run src/lib/backtest/",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:diagnostic": "playwright test mining-diagnostic --project=extension-diagnostic --headed --reporter=list",
    "test:e2e:cdp": "playwright test cdp-diagnostic --project=cdp-diagnostic --headed --reporter=list",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "collector": "npx tsx scripts/data-collector-server.ts",
    "collector:start": "pm2 start scripts/ecosystem.config.cjs",
    "collector:stop": "pm2 stop data-collector",
    "collector:logs": "pm2 logs data-collector",
    "collector:docker:up": "docker compose up -d collector",
    "collector:docker:down": "docker compose down",
    "collector:docker:logs": "docker compose logs -f collector",
    "collect:headless": "npx tsx scripts/headless-collector.ts",
    "collect:visible": "HEADLESS=false npx tsx scripts/headless-collector.ts",
    "collect:xvfb": "bash scripts/xvfb-collect.sh",
    "collect:verify": "npx tsx scripts/verify-collection.ts",
    "wiki:daily": "bash scripts/wiki-rollup.sh daily",
    "wiki:rollup:weekly": "bash scripts/wiki-rollup.sh weekly",
    "wiki:rollup:monthly": "bash scripts/wiki-rollup.sh monthly",
    "wiki:rollup": "bash scripts/wiki-rollup.sh run",
    "wiki:rollup:dry": "bash scripts/wiki-rollup.sh --dry-run run",
    "docs:policy:check": "bash scripts/check-docs-policy.sh"
  },
  "dependencies": {
    "dexie": "^4.0.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.50.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/body-parser": "^1.19.6",
    "@types/chrome": "^0.0.287",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "better-sqlite3": "^12.6.2",
    "body-parser": "^2.2.2",
    "cors": "^2.8.6",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "express": "^5.2.1",
    "fake-indexeddb": "^6.0.0",
    "globals": "^17.3.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.1",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
