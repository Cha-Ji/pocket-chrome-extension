{
  "manifest_version": 3,
  "name": "Pocket Option Auto-Trading",
  "version": "0.1.0",
  "description": "Quant & Auto-Trading Extension for Pocket Option",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "sidePanel",
    "alarms"
  ],
  "host_permissions": [
    "https://pocketoption.com/*",
    "https://*.pocketoption.com/*"
  ],
  "background": {
    "service_worker": "background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://pocketoption.com/*", "https://*.pocketoption.com/*"],
      "js": ["content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_title": "Pocket Option Auto-Trading",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
